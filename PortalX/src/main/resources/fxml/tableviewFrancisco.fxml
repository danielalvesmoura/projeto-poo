<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.ClientesController">
   <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Título e botão-->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="section-title" text="Clientes">
                    <font>
                        <Font name="Arial Black" size="18.0" />
                    </font></Label>
                <Pane maxWidth="100.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="comboFiltro" prefHeight="25.0" prefWidth="85.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Nome" />
                            <String fx:value="CPF" />
                            <String fx:value="Email" />
                            <String fx:value="Telefone" />
                            <String fx:value="Status" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <TextField fx:id="campoPesquisa" prefHeight="35.0" prefWidth="185.0" promptText="Pesquisar cliente...">
                        <font>
                            <Font size="14.0" />
                        </font></TextField>
                </HBox>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="NovoCliente" styleClass="primary-button" text="➕ Novo Cliente">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin></Button>
            </HBox>

            <!-- Tabela de Clientes-->
            <TableView fx:id="tabelaClientes" prefHeight="400" prefWidth="800.0">
                <columns>
                    <TableColumn fx:id="colunaId" prefWidth="60.0" text="id" />
                    <TableColumn fx:id="colunaNome" prefWidth="200" text="Nome" />
                    <TableColumn fx:id="colunaEmail" prefWidth="240" text="E-mail" />
                    <TableColumn fx:id="colunaTelefone" prefWidth="120" text="Telefone" />
                    <TableColumn fx:id="colunaStatus" prefWidth="120" text="Status" />
                    <TableColumn fx:id="colunaAcoes" prefWidth="100" text="Ações" />
                </columns>
            </TableView>
        </VBox>
   </center>
</BorderPane>
